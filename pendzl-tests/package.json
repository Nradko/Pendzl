{
  "name": "@c-forge/pendzl-tests",
  "version": "0.0.13",
  "publishConfig": {
    "access": "public"
  },
  "description": "Utils for testing",
  "homepage": "https://github.com/TODO",
  "repository": "github:wookashwackomy/TODO",
  "author": "",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "keywords": [
    "smart-contracts",
    "polkadot",
    "testing"
  ],
  "scripts": {
    "ts": "tsc --noEmit --incremental --preserveWatchOutput --pretty",
    "lint": "pnpm prettier --check && pnpm eslint",
    "lint:fix": "pnpm prettier --write && pnpm eslint --fix",
    "eslint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "prettier \"**/*.{js,md,json}\"",
    "pretest": "cd ../.. && pnpm build",
    "test": "mocha --recursive \"test/**/*.ts\" --exit",
    "build": "tsc --build .",
    "prepublishOnly": "pnpm build",
    "clean": "rimraf dist internal types *.{d.ts,js}{,.map} build-test tsconfig.tsbuildinfo"
  },
  "files": [
    "dist/",
    "dist/*.d.ts",
    "dist/*.js",
    "dist/*.js.map",
    "src/",
    "behaviors/",
    "types/",
    "*.d.ts",
    "*.d.ts.map",
    "*.js",
    "*.js.map",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@c-forge/polkahat-chai-matchers": "^0.0.73",
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.12",
    "@types/mocha": "^10.0.6",
    "@types/node": "^16.18.89",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "bn.js": "^5.1.5",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.57.0",
    "mocha": "^10.3.0",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "5.3.2"
  },
  "dependencies": {
    "@c-forge/polkahat-network-helpers": "^0.0.22",
    "@c-forge/typechain-types": "^0.0.54",
    "@polkadot/api": "^10.12.4",
    "@polkadot/api-augment": "^10.12.4",
    "@polkadot/api-contract": "^10.12.4",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/types": "^10.12.4",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@types/chai-as-promised": "^7.1.8"
  }
