{
  "name": "e2e-tests",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "ansiToHtml": "npx tsx ./scripts/ansiToHtml.ts",
    "cs": "npx tsx ./scripts/compile/compileSingleContract.ts",
    "ts": "tsc --noEmit --incremental --preserveWatchOutput --pretty",
    "build:debug": "./build.sh path=../../examples $*",
    "build:prod": "env BUILD_PROD=1 ./build.sh path=../../examples $*",
    "localnode": "./substrate-contracts-node --dev --tmp -lerror,runtime::contracts=debug --rpc-max-connections 5000 --pruning=archive",
    "test": "./runTests.sh",
    "generateTypes": "rm -rf typechain && npx tsx ./runWithoutWarnings.ts npx wookashwackomytest-typechain-polkadot --in artifacts --out typechain && npx tsx ./scripts/typechain/generateEventsEnum.ts",
    "lint": "pnpm lint:format && pnpm lint:fix",
    "lint:fix": "eslint . --ext .js,.ts --fix --ignore-path ./.gitignore",
    "lint:format": "pretty-quick  --loglevel warn --write \"./**/*.{js,ts,md,json}\" ",
    "build-pendzl-tests": "cd ../../pendzl-tests && pnpm build",
    "prepare": "pnpm build-pendzl-tests && husky install"
  },
  "dependencies": {
    "@babel/core": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/register": "^7.22.5",
    "@polkadot/api": "^10.11.2",
    "@polkadot/api-contract": "^10.11.2",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@types/chroma-js": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "ansi-to-html": "^0.7.2",
    "bn.js": "^5.2.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-formatter-monkeypatch": "^1.0.1",
    "chalk": "^4.0.0",
    "color-name-list": "^10.11.0",
    "commander": "^10.0.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "fs-extra": "^11.1.1",
    "glob": "^8.1.0",
    "lint-staged": "^13.3.0",
    "lodash": "^4.17.21",
    "loglevel": "^1.8.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "rxjs": "^7.8.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.1.6",
    "wookashwackomytest-pendzl-tests": "../../pendzl-tests",
    "wookashwackomytest-polkahat-chai-matchers": "0.0.14",
    "wookashwackomytest-typechain-compiler": "0.0.36",
    "wookashwackomytest-typechain-polkadot": "0.0.36",
    "wookashwackomytest-typechain-types": "0.0.36"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.197",
    "@types/mocha": "^10.0.1",
    "husky": "^9.0.10",
    "tsconfig-paths": "^4.2.0"
  },
  "packageManager": "pnpm@3.5.1"
}
